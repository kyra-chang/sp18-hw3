<%= form_tag students_path do %>
  <%= label_tag(:name, "Full name") %>
  <%= text_field_tag(:name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:major, "Major") %>
  <%= text_field_tag(:major, nil, placeholder: @placeholder_major) %>

  <%= label_tag(:school_year, "School Year") %>
  <%= text_field_tag(:school_year, nil, placeholder: @placeholder_year) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>